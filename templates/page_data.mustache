{{!
    @template report_wikipages

    This template renders a table of data.

    Example context (json):
    {
        "tableheaders": ["header", "header"]
        "tabledata": [["item", "item"], ["item", "item"]]
    }
}}
<div class = "table-responsive">
    <table class = "table table-striped">
        <caption>
            {{# str }} pluginname, report_wikipages {{/ str }}
        </caption>
        <thead>
            {{#tableheaders}}
                <th>{{.}}</th>
            {{/tableheaders}}
        </thead>

        <tbody>
            {{#tabledata}}
              {{> report_wikipages/page}}
            {{/tabledata}}
        </tbody>
    </table>
</div>